{
  "manifest_version": 3,
  "name": "Slop to Nadella",
  "version": "1.0",
  "description": "Replaces the text 'slop' with 'Nadella'.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ]
}
